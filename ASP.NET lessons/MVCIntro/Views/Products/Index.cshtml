@model IEnumerable<MVCIntro.Models.Product>

@{
    ViewData["Title"] = "Products Index";
}

<h1>Products</h1>
<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=> model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model=> model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var product in Model){
            <tr>
                <td>
                    @Html.DisplayFor(prod=>product.Name)
                </td>
                <td>
                    @Html.DisplayFor(prod=>product.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@product.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
